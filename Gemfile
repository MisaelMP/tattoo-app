source 'https://rubygems.org'

ruby '3.2.8'

# Rails 7
gem 'rails', '~> 7.1.3'

# Database
gem 'pg', '~> 1.5'

# Web server
gem 'puma', '~> 6.4'

# Modern JavaScript & CSS support
gem 'importmap-rails'
gem 'sprockets-rails'
gem 'sassc-rails'

# JSON builder
gem 'jbuilder', '~> 2.11'

# Authentication
gem 'bcrypt', '~> 3.1.18'

# Cloudinary image uploads
gem 'cloudinary'

# Geocoding + maps
gem 'geocoder'
gem 'gmaps4rails'

# Misc front-end helpers
gem 'jquery-rails'
gem 'underscore-rails'

# Caching & boot perf
gem 'bootsnap', '>= 1.15.0', require: false

# Debugging, dev tools
group :development, :test do
  gem 'byebug'
  gem 'pry-rails'
end

group :development do
  gem 'web-console'
  gem 'listen', '~> 3.3'
  gem 'spring'
  gem 'spring-watcher-listen'
  gem 'better_errors'
  gem 'binding_of_caller'
end

# Platform support
gem 'tzinfo-data', platforms: %i[mingw mswin x64_mingw jruby]

# JavaScript support
gem 'coffee-script', '~> 2.4'
