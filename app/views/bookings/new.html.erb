
<div>
  <h1 style="margin-top: 5rem;">
    Book a session with <%= @visit.user.name %>
  </h1>
  <div>
    <%= image_tag @visit.user.profile_image, size: 150 %>
  </div>
</div>

<p>All bookings are for 1 hour.</p>

<br>
<br>

<%= form_for(@booking) do |f| %>
  <div class="container-radio">
    <div><b>Day</b></div>
    <ul>
    <% @dateRange.each do |n| %>
      <li>
        <%= radio_button("booking", "date", n) %>
        <%= label("booking", "date", n, value: n, class:"label") %>
         <div class="check"></div>
      </li>
    <% end %>
  </ul>
  </div>

  <div class="container-radio">
    <div><b>Hour</b></div>
    <ul>
    <% (9..16).each do |n| %>
      <li>
        <%= radio_button("booking", "start_hour", n) %>
        <%= label("booking", "start_hour", "#{n} o'clock", value: n, class:"label") %>
         <div class="check"></div>
      </li>
    <% end %>
  </ul>
  </div>

  <div>
    <%= hidden_field("booking", "artist_id", :value => @visit.user_id) %>
    <%= submit_tag "Book Now", class: "form_button" %>
  </div>
<% end %>
