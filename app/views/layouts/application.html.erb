<!DOCTYPE html>
<html>
  <head>
    <title>TatooApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">

  </head>

  <body>
    <nav id="navbar" class="">
      <div class="nav-wrapper">
        <!-- Navbar Logo -->
        <div class="logo">
          <!-- Logo Placeholder for Inlustration -->
          <%= link_to root_path do %>
          <i class="fas fa-chess-knight"></i>
          Ink Space
        <% end %>

      </div>

      <!-- Navbar Links -->
      <ul class="menu">
        <% if @current_user.present? %>
          <li><%= link_to 'All Works', works_path %></li>

          <li><%= link_to 'New Work', new_work_path %></li>
          
          <li><%= link_to 'All Visits', visits_path %></li>

          <li><%= link_to "Log out #{ @current_user.name }", logout_path %></li>

        <% else %>

          <li><%= link_to new_user_path do %>
            Sign Up
          <% end %>
        </li>

        <li><%= link_to login_path do %>
          Log In
          <% end %>
        <% end %>
      </li>
    </ul>
  </div>
</nav>

<!-- Menu Icon -->
<div class="menuIcon">
  <span class="icon icon-bars"></span>
  <span class="icon icon-bars overlay"></span>
</div>
<div class="overlay-menu">
  <ul class="menu">
    <% if @current_user.present? %>
      <li><%= link_to 'All Works', works_path %></li>

      <li><%= link_to 'New Work', new_work_path %></li>

      <li><%= link_to "Log out #{ @current_user.name }", logout_path %></li>

    <% else %>

      <li><%= link_to new_user_path do %>
        Sign Up
      <% end %>
    </li>

    <li><%= link_to login_path do %>
      Log In
    <% end %>
  </li>
 <% end %>
</ul>

</div>

<%= yield %>

<div class="footer">
  <p>Ink Space was created by GA Alumni Sonia Parker & Misael M </p>
  <p>Â©InkSpace 2018</p>
</div>
</body>
</html>
