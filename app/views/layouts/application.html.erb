<!DOCTYPE html>
<html>
  <head>
    <title>TatooApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

           <%= link_to 'All Works', works_path %>

           <%= link_to 'New Work', new_work_path %>

         <% if @current_user.present? %>

             <%= link_to "Log out #{ @current_user.name }", logout_path %>

         <% else %>

             <%= link_to new_user_path do %>
             Sign Up
             <% end %>


             <%= link_to login_path do %>
               Log In
             <% end %>

         <% end %>



         <% if flash[:success] %>

             <%= flash[:success]%>

         <% end %>
         <% if flash[:notice] %>

             <%= flash[:notice]%>

         <% end %>
         <% if flash[:error] %>

             <%= flash[:error]%>

         <% end %>

    <%= yield %>
  </body>
</html>
