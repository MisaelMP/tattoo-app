<!DOCTYPE html>
<html>
  <head>
    <title>TatooApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.6.0/p5.min.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.6.0/addons/p5.dom.js" type="text/javascript">
    </script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
    <script src="//maps.google.com/maps/api/js?key=AIzaSyAmcaYqRu2MVCKJv3qpNkkr_pSoNthsl3U"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>

  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <nav id="navbar" class="">
      <div class="nav-wrapper">
        <!-- Navbar Logo -->
        <div class="logo">
          <!-- Logo Placeholder for Inlustration -->
          <%= link_to root_path do %>
          <i class="fas fa-chess-knight"></i>
          Ink Space
        <% end %>

      </div>

      <!-- Navbar Links -->
      <ul class="menu">
        <% if @current_user.present? %>
          <li><%= link_to 'Explore', works_path %></li>
          <!-- TODO only show below if logged in as artist -->
          <li><%= link_to 'Add Artwork', new_work_path %></li>

          <li><%= link_to 'Artists', users_path %></li>

          <li><%= link_to 'Tours', visits_path %></li>

          <li><%= link_to 'Profile', edit_user_path(@current_user.id) %></li>

          <li><%= link_to "Log out #{ @current_user.name }", logout_path %></li>

        <% else %>

          <li><%= link_to 'Explore', works_path %></li>

          <li><%= link_to login_path do %>
            Sign Up
          <% end %>
        </li>

        <li><%= link_to login_path do %>
          Log In
        <% end %>
      <% end %>
    </li>
  </ul>
</div>
</nav>

<!-- Menu Icon -->
<div class="menuIcon">
<span class="icon icon-bars"></span>
<span class="icon icon-bars overlay"></span>
</div>
<div class="overlay-menu">
<ul class="menu">
  <% if @current_user.present? %>
    <li><%= link_to 'Explore', works_path %></li>

    <li><%= link_to 'Add Artwork', new_work_path %></li>

    <li><%= link_to 'Tours', visits_path %></li>

    <li><%= link_to 'Artists', users_path %></li>

    <li><%= link_to 'Profile', edit_user_path(@current_user.id) %></li>

    <li><%= link_to "Log out #{ @current_user.name }", logout_path %></li>

  <% else %>
    <li><%= link_to 'Explore', works_path %></li>

    <li><%= link_to 'Tours', visits_path %></li>

    <li><%= link_to new_user_path do %>
      Sign Up
    <% end %>
  </li>

  <li><%= link_to login_path do %>
    Log In
  <% end %>
</li>
<% end %>
</ul>

</div>

<%= yield %>

<div class="footer">
<p>Ink Space created by GA Alumni Sonia Parker & Misael M
</p>
<p>Â©InkSpace 2018</p>
</div>
</body>
</html>
