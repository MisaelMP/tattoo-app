<% if flash[:success] %>p
  <%= flash[:success]%>
<% end %>
<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice]%></p>
<% end %>
<% if flash[:error] %>
  <p class="error"><%= flash[:error]%></p>
<% end %>

<div id="login-signup-container">

  <div id="login-signup-toggler">
    <button type="button" id="toggle-login">Login</button>
    <button type="button" id="toggle-signup">Signup</button>
  </div>

  <div id="login-form">
    <%= form_tag login_path do %>
      <h1>Log In</h1>
      <%= label_tag :email %>
      <%= email_field_tag :email, "" %>

      <%= label_tag :password %>
      <%= password_field_tag :password, ""  %>

      <%= button_tag type: 'submit' do %>
       Log In!
      <% end %>
    <% end %>
  </div>

  <div id="signup-form">
    <%= form_tag signup_path do %>
      <h1>Sign Up</h1>

      <% if @user.errors.any? %>
          <% @user.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
          <% end %>
      <% end %>

      <%= label_tag :signup_email %>
      <%= email_field_tag :signup_email %>

      <%= label_tag(:name, "Full Name")%>
      <%= text_field_tag :name %>

      <%= label_tag(:user_name, "Choose User Name")%>
      <%= text_field_tag :user_name %>

      <%= label_tag(:profile_image, "Upload Profile Image")%>
      <%= file_field_tag :profile_image %>

      <%= label_tag(:location, "Choose Your Location")%>
      <%= text_field_tag :location %>

      <%= label_tag(:blurb, "Write Your Blurb")%>
      <%= text_field_tag :blurb %>

      <%= label_tag(:is_artist, "Are you an artist?")%>
      <%= radio_button_tag(:is_artist_yes, 1) %>
      <%= label_tag(:is_artist_yes, "Yes") %>
      <%= radio_button_tag(:is_artist_no, 0) %>
      <%= label_tag(:is_artist_no, "No") %>

      <%= label_tag(:phone, "Provide Phone Number")%>
      <%= text_field_tag :phone %>

      <%= label_tag :signup_password %>
      <%= password_field_tag :signup_password %>

      <%= label_tag :password_confirmation %>
      <%= password_field_tag :password_confirmation%>

      <%= button_tag type: 'submit' do %>
       Sign Up!
      <% end %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
$(document).ready(function(){
    $('#toggle-login').click(function(){
      $('#login-form').show();
      $('#signup-form').hide();
    });

    $('#toggle-signup').click(function(){
      $('#login-form').hide();
      $('#signup-form').show();
    });
});
</script>
