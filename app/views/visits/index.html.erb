<h1>All Visits</h1>

      <% @visits.each do |visit| %>
      <!-- #  user_id    :integer
      #  start_date :date
      #  end_date   :date
      #  location   :text
      #  latitude   :float
      #  longtitude :float
      #  created_at :datetime         not null
      #  updated_at :datetime         not null -->


<h2>This is visit number <%= visit.id %> </h2>
    <p style="color:blue;"><%= link_to "View this visit", visit %></p>
    <p>Created by <i><%= visit.user.name %></i>
        on <i><%= visit.created_at.strftime("%Y-%m-%d") %></i>,
          at <i><%= visit.created_at.strftime("%I:%M%p") %></i>
            </p>
        <p>Start date: <%= visit.start_date %> </p>
        <p>End date: <%= visit.end_date %> </p>
        <p>Location: <%= visit.location %> </p>




      <% end %>
