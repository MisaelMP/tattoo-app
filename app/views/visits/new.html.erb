      <h1>New Visit</h1>

<%= form_for @visit do |f| %>
<div class="field">
        <%= f.label :start_date %>
        <%= f.date_field :start_date, :autofocus => true %>
</div>
<div class="field">
        <%= f.label :end_date %>
        <%= f.date_field :end_date%>
</div>
<div class="field"
        <%= f.label :location %>
        <%= f.text_field :location %>
</div>
        <%= submit_tag "Create New Visit", class:"form_button" %>

<% end %>
