#!/bin/bash

# Docker setup script for Tattoo App
set -e

echo "ğŸ³ Setting up Docker for Tattoo App..."

# Check if Docker is installed
if ! command -v docker &> /dev/null; then
    echo "âŒ Docker is not installed. Please install Docker first."
    exit 1
fi

# Check if Docker Compose is available (newer integrated version)
if ! docker compose version &> /dev/null; then
    echo "âŒ Docker Compose is not available. Please ensure Docker Desktop is installed and running."
    exit 1
fi

# Check if .env file exists
if [ ! -f .env ]; then
    echo "ğŸ“ Creating .env file from template..."
    cp env.example .env
    echo "âš ï¸  Please edit .env file with your actual values before continuing."
    echo "   Especially important: RAILS_MASTER_KEY and CLOUDINARY_URL"
    read -p "Press Enter when you've updated the .env file..."
fi

# Make entrypoint script executable
chmod +x entrypoint.sh

# Build Docker images
echo "ğŸ”¨ Building Docker images..."
docker compose build

# Start services
echo "ğŸš€ Starting services..."
docker compose up -d

# Wait for database to be ready
echo "â³ Waiting for database to be ready..."
sleep 10

# Create database
echo "ğŸ—„ï¸  Creating database..."
docker compose exec -T web bundle exec rake db:create 2>/dev/null || echo "Database might already exist"

# Run migrations
echo "ğŸ”„ Running migrations..."
docker compose exec -T web bundle exec rake db:migrate

echo "âœ… Setup complete!"
echo ""
echo "ğŸŒ Your application should be available at: http://localhost:3000"
echo "ğŸ—„ï¸  Database is available at: localhost:5432"
echo ""
echo "ğŸ“‹ Useful commands:"
echo "  - View logs: docker compose logs -f"
echo "  - Stop services: docker compose down"
echo "  - Rails console: docker compose exec web bundle exec rails console"
echo "  - Run tests: docker compose exec web bundle exec rspec" 